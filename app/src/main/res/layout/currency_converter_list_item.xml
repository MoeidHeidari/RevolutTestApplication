<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="386dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/Currency_Converter_EditText_Item"
                android:layout_width="152dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="21dp"
                android:background="@drawable/rounded_blue_rectangle"
                android:ems="10"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:text="Name"
                android:textColor="@color/White"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Currency_Converter_RateTextView_Item"
                android:layout_width="83dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/Currency_Converter_EditText_Item"
                android:layout_marginStart="86dp"
                android:layout_marginLeft="86dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="45dp"
                android:layout_marginRight="45dp"
                android:layout_toStartOf="@+id/Currency_Converter_EditText_Item"
                android:layout_toLeftOf="@+id/Currency_Converter_EditText_Item"
                android:text="TextView"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp" />

            <com.haipq.android.flagkit.FlagImageView
                android:id="@+id/currensies_list_item_flag"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="0dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>